{
    "hosting": {
        "public": "app/templates",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "run": {
                    "serviceId": "astro",
                    "region": "us-central1"
                }
            }
        ],
        "cleanUrls": true
    }
}